{% extends 'layouts/base.html.twig' %}

{% block title 'Register'%}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">

            <h1 class="mb-3 text-center">Create an account</h1>

            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                {# {{ form_row(registrationForm.plainPassword, {
                    'help' : 'write your password',
                }) }} #}

                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="mt-3 btn btn-primary btn-lg w-100" formnovalidate>Register</button>

                <p class='mt-5 mb-3 text-center text-muted'>
                    Already have an account? <a class='text-decoration-none' href="{{ path('app_login') }}">Login in</a>
                </p>
            {{ form_end(registrationForm) }}
            
        </div>
    </div>
{% endblock %}
