<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="{{ asset('images/logo.png') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
        <style>
            .alert {
                padding: 10px;
                text-align: center;
                color: white;
            }

            .alert-success {
                background-color: green;
            }

            .alert-info {
                background-color: blue;
            }

            .alert-error {
                background-color: red;
            }
        </style>
    </head>
    <body>

        {{ include("layouts/partials/_flash_message.html.twig") }}

        <nav>
            <ul>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_pins_create') }}">New Pin</a></li>
            </ul>
        </nav>

        {% block body %}{% endblock %}
    </body>
</html>
